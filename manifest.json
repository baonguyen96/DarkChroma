{
    "manifest_version": 2,
    "name": "DarkChroma",
    "version": "1.0",
    "description": "Provide dark background with light text for Chrome",
    "homepage_url": "https://github.com/baonguyen96/DarkChroma",
    "offline_enabled": true,
    "icons": {
        "128": "assets/images/logo/png/DarkChroma128.png",
        "48": "assets/images/logo/png/DarkChroma48.png",
        "16": "assets/images/logo/png/DarkChroma16.png"
    },
    "browser_action": {
        "default_title": "DarkChroma",
        "default_icon": "assets/images/logo/png/DarkChroma16.png"
    },
    "options_page": "html/option.html",
    "content_scripts": [
        {
            "css": [
                "css/default_style.css",
//                "css/frequent_pages/facebook.css",
                "css/frequent_pages/google.css",
                "css/frequent_pages/wikipedia.css"
//                "css/frequent_pages/youtube.css"
            ],
            "matches": [
                "*://www.google.com/*",
                "*://*.wikipedia.org/*"
            ],
//            "exclude_globs": [
//                "*youtube*",
//                "*facebook*",
//                "*amazon*",
//                "*github*",
//                "*stackoverflow*",
//                "*stackexchange*",
//                "*bootstrap*",
//                "*udemy*",
//                "*w3school*",
//                "*outlook*",
//                "*mail.google*"
//            ],
            "js": [
                "script/jquery-min.js",
                "script/options.js"
//                "script/all.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ]
}