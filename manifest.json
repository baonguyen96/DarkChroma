{
    "manifest_version": 2,
    "name": "DarkChroma",
    "version": "1.0",
    "description": "Provide dark background with light text for Chrome",
    "icons": {
        "128": "images/png/DarkChroma128.png",
        "48": "images/png/DarkChroma48.png",
        "16": "images/png/DarkChroma16.png"
    },
    "browser_action": {
        "default_title": "DarkChroma",
        "default_icon": "images/png/DarkChroma16.png"
    },
    "options_page": "html/option.html",
    "content_scripts": [{
        "css": ["css/style.css"],
        "js": ["script/content.js"],
        "matches": ["http://*/*", "https://*/*"],
        "exclude_globs": [
            "*facebook*", "*youtube*", "*github*",
            "*stackoverflow*", "*stackexchange*",
            "*getbootstrap*", "getbootstrap*",
            "*w3schools*", "*outlook*", "*mail.google*"
        ]
    }]
}